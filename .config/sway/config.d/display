set $laptop eDP-1
set $portable DP-1
set $portable2 DP-2

output $portable2 {
  pos 1500 0
  scale 1.0
}
output $portable {
  pos 1500 0
  scale 1.0
}

output $laptop {
  pos 0 0
  scale 2
  # dpms off
}

bindswitch --locked lid:on\
  exec $swaylock_command,\
  output '*' disable

bindswitch --locked lid:off\
  output '*' enable
