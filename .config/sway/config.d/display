set $laptop eDP-1
set $portable DP-1
set $portable2 DP-2

output $portable2 {
  pos 1080 0
  scale 1.0
}
output $portable {
  pos 0 0
  scale 2
  transform 270
}

output $laptop {
  pos 4520 440
  scale 2
  # dpms off
}

bindswitch --locked lid:on\
  exec $swaylock_command,\
  exec systemctl suspend
